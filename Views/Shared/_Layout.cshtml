<!DOCTYPE html>
<html>

<!--el que esta arrancando chido-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <author name="Jocelyn Rosalia Macias López">   </author>
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!-- Header superior -->
    <header class="bg-light p-3 border-bottom d-flex justify-content-between align-items-center">
        <!-- Logo y título -->
        <div class="d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" width="40" height="40" class="me-3">
                <!-- Fondo con gradiente -->
                <defs>
                    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
                    </linearGradient>
                    <linearGradient id="taskGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#4facfe;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#00f2fe;stop-opacity:1" />
                    </linearGradient>
                    <linearGradient id="checkGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#56ab2f;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#a8e6cf;stop-opacity:1" />
                    </linearGradient>
                    <!-- Sombra -->
                    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
                        <feDropShadow dx="2" dy="4" stdDeviation="4" flood-color="rgba(0,0,0,0.3)" />
                    </filter>
                </defs>

                <!-- Fondo circular -->
                <circle cx="100" cy="100" r="90" fill="url(#bgGradient)" filter="url(#shadow)" />

                <!-- Tablero de tareas (clipboard) -->
                <rect x="60" y="40" width="80" height="100" rx="8" ry="8" fill="white" opacity="0.95" />
                <rect x="55" y="35" width="90" height="110" rx="12" ry="12" fill="none" stroke="white" stroke-width="3" opacity="0.8" />

                <!-- Clip superior -->
                <rect x="85" y="25" width="30" height="20" rx="10" ry="10" fill="url(#taskGradient)" />
                <rect x="90" y="30" width="20" height="10" rx="5" ry="5" fill="white" opacity="0.7" />

                <!-- Líneas de tareas -->
                <rect x="70" y="55" width="60" height="3" rx="1" fill="#667eea" opacity="0.6" />
                <rect x="70" y="70" width="50" height="3" rx="1" fill="#667eea" opacity="0.6" />
                <rect x="70" y="85" width="55" height="3" rx="1" fill="#667eea" opacity="0.6" />
                <rect x="70" y="100" width="45" height="3" rx="1" fill="#667eea" opacity="0.6" />
                <rect x="70" y="115" width="40" height="3" rx="1" fill="#667eea" opacity="0.6" />

                <!-- Checkmarks -->
                <circle cx="75" cy="56" r="4" fill="url(#checkGradient)" />
                <path d="M 72 56 L 74 58 L 78 54" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" />

                <circle cx="75" cy="71" r="4" fill="url(#checkGradient)" />
                <path d="M 72 71 L 74 73 L 78 69" stroke="white" stroke-width="2" fill="none" stroke-linecap="round" />

                <circle cx="75" cy="86" r="4" fill="#e0e0e0" />
                <circle cx="75" cy="101" r="4" fill="#e0e0e0" />
                <circle cx="75" cy="116" r="4" fill="#e0e0e0" />

                <!-- Efecto de brillo -->
                <ellipse cx="80" cy="60" rx="25" ry="15" fill="white" opacity="0.1" />
            </svg>

            <h4 class="mb-0 fw-bold text-dark">
                <span class="text-primary">Gestor</span> de <span class="text-secondary">Tareas</span>
            </h4>
        </div>

        <!-- Barra de búsqueda centrada -->
        <div class="input-group w-50">
            <input type="search" class="form-control rounded" placeholder="Buscar..." aria-label="Buscar" />
            <span class="input-group-text border-0">
                <i class="fas fa-search"></i>
            </span>
        </div>
        <!-- Bienvenida al usuario -->
        <div class="ms-4">
            <span class="fw-semibold text-dark">
                Welcome @Session["Usuario"]
            </span>
        </div>
        <!-- Espacio para elementos adicionales (menú de usuario, notificaciones, etc.) -->
        <div class="d-flex align-items-center">
            <!-- Puedes agregar aquí botones de notificaciones, perfil de usuario, etc. -->

            <button class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-user"></i>
            </button>
        </div>
    </header>

  
    @*<button type="button" class="btn btn-outline-primary">Crear Proyecto</button>*@
    <!-- Contenedor principal: barra lateral + contenido -->
    <div class="d-flex">
        <!-- Barra lateral -->
        <aside class="d-flex flex-column flex-shrink-0 bg-body-tertiary p-3" style="width: 4.5rem; height: 100vh;">


            <a href="/" class="d-block mb-3 text-center">
                <svg class="bi pe-none" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            </a>
            <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
                <li class="nav-item">
                    <a href="@Url.Action("Crear", "Proyecto")" class="nav-link active py-3 border-bottom rounded-0" data-bs-toggle="tooltip" data-bs-placement="right" title="Home">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z" />
                        </svg>
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link py-3 border-bottom rounded-0" title="Dashboard">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                        </svg>
                    </a>
                </li>
                @{
                    var rolUsuario = Session["Rol"] != null ? Session["Rol"].ToString() : "";
                }

                @if (rolUsuario == "Administrador")
                {
                    <li>
                        <a href="@Url.Action("AdminUser", "Usuario")" class="nav-link py-3 border-bottom rounded-0" title="Consultar usuarios registrados">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
                                <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m0 5.996V14H3s-1 0-1-1 1-4 6-4q.845.002 1.544.107a4.5 4.5 0 0 0-.803.918A11 11 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664zM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1" />
                            </svg>
                        </a>
                    </li>
                }

                <li>
                    <a href="#" class="nav-link py-3 border-bottom rounded-0" title="Products">
                        <svg class="bi pe-none" width="24" height="24"><use xlink:href="#grid"></use></svg>
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link py-3 border-bottom rounded-0" title="Customers">
                        <svg class="bi pe-none" width="24" height="24"><use xlink:href="#people-circle"></use></svg>
                    </a>
                </li>
            </ul>
            <div class="dropdown border-top pt-3 text-center">
                <a href="#" class="d-flex align-items-center justify-content-center dropdown-toggle" data-bs-toggle="dropdown">
                    <img src="https://github.com/mdo.png" alt="user" width="32" height="32" class="rounded-circle">
                </a>
                <ul class="dropdown-menu text-small shadow">
                    <li><a class="dropdown-item" href="#">Nuevo proyecto</a></li>
                    <li><a class="dropdown-item" href="#">Configuración</a></li>
                    <li><a class="dropdown-item" href="#">Perfil</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="@Url.Action("Login", "Usuario")">Cerrar sesión</a></li>
                </ul>
            </div>
        </aside>

        <!-- Contenido principal -->
        <main class="p-4 w-100">
            <div class="container body-content">
                @RenderBody()
            </div>
        </main>
    </div>

</body>
</html>
